<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:DddInPractice.UI">
    <DataTemplate x:Key="SnackMachineViewModel" DataType="ui:SnackMachineViewModel">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Content="Купить товар" FontSize="18" Padding="10" Margin="10" Command="{Binding BuySnackCommand}" CommandParameter="1" />

                <StackPanel Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Всего внесено:" FontSize="18" />
                    <Label Content="{Binding MoneyInTransaction}" FontSize="18" FontWeight="Bold" />
                </StackPanel>

                <Button Grid.Column="0" Grid.Row="2" Content="Вставить 10₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertCentCommand}" />
                <Button Grid.Column="1" Grid.Row="2" Content="Вставить 50₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertTenCentCommand}" />
                <Button Grid.Column="2" Grid.Row="2" Content="Вставить 100₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertQuarterCommand}" />

                <Button Grid.Column="0" Grid.Row="3" Content="Вставить 500₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertDollarCommand}" />
                <Button Grid.Column="1" Grid.Row="3" Content="Вставить 1000₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertFiveDollarCommand}" />
                <Button Grid.Column="2" Grid.Row="3" Content="Вставить 5000₽" FontSize="18" Padding="10" Margin="10" Command="{Binding InsertTwentyDollarCommand}" />

                <Button Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="4" Content="Вернуть деньги" Command="{Binding ReturnMoneyCommand}"
                        FontSize="18" Padding="10" Margin="10"/>

                <Label Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="5" Content="{Binding Message}" HorizontalAlignment="Center" FontSize="16" />
            </Grid>

            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0 10 0 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Денег внутри:" FontSize="20" />
                    <Label Content="{Binding MoneyInside}" FontSize="20" FontWeight="Bold" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Image Source="{StaticResource img10rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.OneCentCount}" FontSize="20" FontWeight="Bold" Margin="10 30 30 0" />

                    <Image Source="{StaticResource img50rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.TenCentCount}" FontSize="20" FontWeight="Bold" Margin="10 30 30 0" />

                    <Image Source="{StaticResource img100rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.QuarterCount}" FontSize="20" FontWeight="Bold" Margin="10 30 30 0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Image Source="{StaticResource img500rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.OneDollarCount}" FontSize="20" FontWeight="Bold" Margin="10 3 30 0" />

                    <Image Source="{StaticResource img1000rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.FiveDollarCount}" FontSize="20" FontWeight="Bold" Margin="10 3 30 0" />

                    <Image Source="{StaticResource img5000rub}" Width="100" />
                    <Label Content="{Binding MoneyInside.TwentyDollarCount}" FontSize="20" FontWeight="Bold" Margin="10 3 30 0" />
                </StackPanel>
            </StackPanel>
        </Grid>

    </DataTemplate>
</ResourceDictionary>
